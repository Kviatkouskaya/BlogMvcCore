@model List<Comment>

<tr><td><h5><em>Comments:</em></h5></td><td></td></tr>
<tr>
    <td>
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {

                <p>@item.Author @item.Date.Day/@item.Date.Month/@item.Date.Year </p>
                <p>@item.Text</p>
                <p>------------------------------------------------</p>
            }
        }
        else
        {
            <p>Let's start discussing...</p>
        }
    </td>
    <td></td>
</tr>