@model List<PostDomain>

<div>
    <table border="1">
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                @if (item.Text.Count() > 500)
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.Text.Substring(0,500)
                            <a asp-action="ViewPostAndComments" asp-controller="Post" asp-route-postID=@item.ID target="_blank">view more</a>
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>
                            @item.Title
                        </td>
                        <td>
                            @item.Text
                            <a asp-action="ViewPostAndComments" asp-controller="Post" asp-route-postID=@item.ID target="_blank">view more</a>
                        </td>
                    </tr>
                }
            }
        }
    </table>
</div>
